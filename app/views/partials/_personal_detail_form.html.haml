= simple_form_for [@user, @personal_detail] do |f|
  - unless @user.personal_detail
    = f.input :gender, :collection => %w[Male Female]
  = f.input :weight
  = f.input :bicep
  = f.input :shoulders
  = f.input :chest
  = f.input :neck
  = f.input :waist
  = f.input :hips
  = f.input :thigh
  = f.input :resting_heart_rate
  = f.input :calf
  = f.button :submit