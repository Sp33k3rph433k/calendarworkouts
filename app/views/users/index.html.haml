                      %b Chest:
                      = f.reify.chest
                    %li
                      %i.glyphicons.glyphicons-dumbbell
                      %b Shoulders:
                      = f.reify.shoulders
                    %li
                      %i.glyphicons.glyphicons-dumbbell
                      %b Neck:
                      = f.reify.neck
                    %li
                      %i.glyphicons.glyphicons-dumbbell
                      %b Waist
                      = f.reify.waist
                    %li
                      %i.glyphicons.glyphicons-dumbbell
                      %b Hips:
                      = f.reify.hips
                    %li
                      %i.glyphicons.glyphicons-dumbbell
                      %b Thigh:
                      = f.reify.thigh
                    %li
                      %i.glyphicons.glyphicons-dumbbell
                      %b Calf:
                      = f.reify.calf
