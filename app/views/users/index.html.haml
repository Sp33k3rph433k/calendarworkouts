:css
  .user-progress-pic {
    background: url("#{@user.avatar.url(:progress_size)}") no-repeat;
    background-size: cover;
    display: block;
    position: relative;
    height: 250px;
  }
  #user_avatar {
    width: 250px;
    height: 250px;
    margin-right: 100px;
    opacity: 0;
    filter: alpha(opacity=0); /* IE 5-7 */
    margin-bottom: 8px;
  }